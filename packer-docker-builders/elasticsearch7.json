{
  "variables": {
    "REGION": "eu-west-2",
    "ES_JAVA_OPTS": "-Xmx1g -Xms1g"
  },

  "builders": [
    {
      "type": "docker",
      "image": "elastic/elasticsearch:7.0.1",
      "commit": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "config/elasticsearch.yml",
      "destination": "/usr/share/elasticsearch/config/elasticsearch.yml"
    },
    {
      "type": "shell",
      "inline": [
        "/bin/chown elasticsearch:elasticsearch config/elasticsearch.yml",
        "echo -e 'y\n' | su elasticsearch -c \"/usr/share/elasticsearch/bin/elasticsearch-plugin install discovery-ec2\"",
        "echo -e 'y\n' | su elasticsearch -c \"/usr/share/elasticsearch/bin/elasticsearch-plugin install repository-s3\"",
      ]
    }
  ],

  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "217554036865.dkr.ecr.eu-west-2.amazonaws.com/accenture/elasticsearch",
        "tag": "accent-7.0.1-1"
      },
      {
        "type": "docker-push",
        "ecr_login": true,
        "login_server": "https://217554036865.dkr.ecr.eu-west-2.amazonaws.com/"
      }
    ]
  ]

}
