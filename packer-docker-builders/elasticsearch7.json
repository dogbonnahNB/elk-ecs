{
  "variables": {
    "REGION": "eu-west-2"
  },

  "builders": [
    {
      "type": "docker",
      "image": "elastic/elasticsearch:7.0.1",
      "commit": true
    }
  ],

  "provisioners": [
    {
      "type": "file",
      "source": "config/elasticsearch.yml",
      "destination": "/usr/share/elasticsearch/config/"
    },
    {
      "type": "shell",
      "inline": [
        "/bin/chown elasticsearch:elasticsearch config/elasticsearch.yml",
        "echo -e 'y\n' | su elasticsearch -c \"/usr/share/elasticsearch/bin/elasticsearch-plugin install discovery-ec2\"",
        "echo -e 'y\n' | su elasticsearch -c \"/usr/share/elasticsearch/bin/elasticsearch-plugin install repository-s3\"",
        "sed -e '/^-Xm/s/^/#/g' -i /usr/share/elasticsearch/config/jvm.options"
      ]
    }
  ],

  "post-processors": [
    {
      "type": "docker-tag",
      "repository": "accenture/elasticsearch",
      "tag": "accent-7.0.1-0"
    }
  ]

}
